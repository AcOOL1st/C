#include <stdio.h>

int main (void) 
{


printf (" Enter amount of loan:");
scanf ( "%f" , &Bank);

printf(" /nEnter interest rate: ");
scanf("%f", &Interest);

MonthRate = (Interest/100.0f) / 12;

printf( " /nEnter monthly payment:");
scanf("%f", &MonthlyPay);

balance1 = ( Bank - MonthlyPay ) + ( Bank - MonthlyPay ) * MonthRate;
printf("/n Balance remaining after first payment: %.2f",balance1);

balance2 = ( balance1 - MonthlyPay ) + ( balance1 - MonthlyPay ) * MonthRate;
printf("/n Balance remaining after second payment: %.2f",balance2);
balance3 = ( balance2 - MonthlyPay ) + ( balance2 - MonthlyPay ) * MonthRate;

printf("/n Balance remaining after third payment: %.2f",balance3);


return 0 ; 

}
